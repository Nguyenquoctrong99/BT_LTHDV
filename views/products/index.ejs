<%- include('../partials/header') %>
<h2>Products</h2>
<a href="/products/new" class="btn btn-success mb-2">+ Add Product</a>
<table class="table table-striped">
  <thead>
    <tr><th>Name</th><th>Price</th><th>Quantity</th><th>Supplier</th><th>Actions</th></tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td><%= p.quantity %></td>
        <td><%= p.supplierId ? p.supplierId.name : "N/A" %></td>
        <td>
          <a href="/products/<%= p._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
          <form action="/products/<%= p._id %>/delete" method="post" style="display:inline">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete product?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
