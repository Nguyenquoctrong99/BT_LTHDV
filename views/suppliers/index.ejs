<%- include('../partials/header') %>
<h2>Suppliers</h2>
<a href="/suppliers/new" class="btn btn-success mb-2">+ Add Supplier</a>
<table class="table table-bordered">
  <thead>
    <tr><th>Name</th><th>Address</th><th>Phone</th><th>Actions</th></tr>
  </thead>
  <tbody>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a href="/suppliers/<%= s._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
          <form action="/suppliers/<%= s._id %>/delete" method="post" style="display:inline">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete supplier?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
