<%- include('../partials/header') %>
<h2>Edit Supplier</h2>
<form method="post" action="/suppliers/<%= supplier._id %>/edit">
  <div class="mb-3"><label>Name</label><input class="form-control" name="name" value="<%= supplier.name %>"></div>
  <div class="mb-3"><label>Address</label><input class="form-control" name="address" value="<%= supplier.address %>"></div>
  <div class="mb-3"><label>Phone</label><input class="form-control" name="phone" value="<%= supplier.phone %>"></div>
  <button class="btn btn-primary">Update</button>
</form>
<%- include('../partials/footer') %>
